<!doctype html>
<head>
  <title>{% block title %}{% endblock %} - Search with Machine Learning</title>
  <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
  <script src="https://cdn.tailwindcss.com?plugins=forms"></script>
</head>
<body>
<nav class="p-4">
  <h1 class="font-bold"><a href="{{ url_for("query") }}">Search with Machine Learning</a></h1>
  <ul>
  </ul>
</nav>
<section class="content" class="px-4">
  <header id="main-header" class="px-4">
    <div id="header-content">{% block header %}{% endblock %}</div>
    {%include 'search_box.jinja2' %}
  </header>
  <body>{% for message in get_flashed_messages() %}
    <div class="flash">{{ message }}</div>
  {% endfor %}
  {% block content %}{% endblock %}</body>
</section>
<section class="footer p-8 py-4">
  {% block footer %}
    <div id="main-footer" class="footer">
      <div>Copyright Daniel Tunkelang and Grant Ingersoll. 2022</div>
    </div>
  {% endblock %}
</section>
</body>
</html>