<div id="search-results" class="search-results">
  {% for hit in search_response.hits.hits %}
    <div class="grid grid-cols-12 p-2 border-b border-slate-200 {% if loop.cycle('last') %}border-white {%endif%}}">
      <div class="col-span-3 bg-white border border-slate-200 rounded-md">
        {% if hit._source.image %}
          <img src="{{ hit._source.image[0] }}" class="h-36 object-fit mx-auto" />
        {% endif %}
      </div>
      <div class="col-span-9 px-4">
        <h2 class="text-bold text-blue-500">
          {% if hit.highlight and hit.highlight.name %}
            {{ hit.highlight.name[0] }}
          {% else%}
            {{ hit._source.name[0] }}
          {% endif %}
        </h2>
        <p class="text-slate-500 break-all">
        {% if hit._source.longDescription %}
          {#do we have a highlight?#}
          {% if hit.highlight and hit.highlight.longDescription %}
            {{ hit.highlight.longDescription[0] }}
          {% else %}
            {{ hit._source.longDescription[0] }}
          {% endif %}
        {% elif hit._source.shortDescription %}
          {#do we have a highlight?#}
          {% if hit.highlight and hit.highlight.shortDescription %}
            {{ hit.highlight.shortDescription }}
          {% else %}
            {{ hit._source.shortDescription[0] }}
          {% endif %}
        {% endif %}
        </p>
        <div class="mt-2">
        <p class="text-slate-500 text-sm">productId: {{ hit._source.productId[0] }}</p>
        {% if hit._source.salePrice %}
          <p class="text-slate-500 text-sm">price: ${{ hit._source.salePrice[0] }}</p>
        {% endif %}
        </div>
      </div>
    </div>
  {% endfor %}
  </div>
</div>